mood = input("What mood are you in? Answer with happy, nervous, sad, excited or relaxed: ")

if mood == "happy":
    print("It is great to see you happy!")
elif mood == "nervous":
    print("Take a deep breath 3 times.")
elif mood == "sad":
    print("Think about something nice.")
elif mood == "excited":
    print("Calm a bit.")
elif mood == "relaxed":
    print("Way to go bro.")
else:
    print("I don't recognize this mood.")
